<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yd05.mprj.delicious.service.DeliciousMapper">

	<select id="selectDeli" parameterType="com.yd05.mprj.delicious.service.DeliciousVO" 
			resultType="com.yd05.mprj.delicious.service.DeliciousVO">
		SELECT * FROM DELICIOUS WHERE CONTENTID = #{contentid}
	</select>
	
	<insert id="insertDeli" parameterType="com.yd05.mprj.delicious.service.DeliciousVO">
		INSERT INTO DELICIOUS VALUES (#{contentid}, #{addr1}, #{firstimage}, #{tel}, #{title})
	</insert>
	
	<select id="isConidCheck" parameterType="String" resultType="boolean">
		SELECT CASE WHEN COUNT(CONTENTID) = 1 THEN 0 ELSE 1 END AS ID FROM DELICIOUS WHERE CONTENTID = #{str}
	</select>
</mapper>